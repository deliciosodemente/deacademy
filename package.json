{
    "name": "digital-english-academy",
    "version": "1.0.0",
    "description": "Plataforma integral de aprendizaje de inglÃ©s con optimizaciones avanzadas",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build && xcopy api dist\\api /E /I /H /Y",
        "build:production": "cross-env NODE_ENV=production npm run build",
        "preview": "vite preview",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "format": "prettier --write .",
        "type-check": "tsc --noEmit",
        "optimize": "node build/production-optimizer.js",
        "deploy:docker": "bash deploy/scripts/deploy.sh --environment production --type docker",
        "deploy:k8s": "bash deploy/scripts/deploy.sh --environment production --type k8s",
        "deploy:staging": "bash deploy/scripts/deploy.sh --environment staging --type docker",
        "backup": "bash deploy/scripts/backup.sh",
        "docker:build": "docker build -f deploy/docker/Dockerfile.production -t digitalenglishacademy/app:latest .",
        "docker:build:production": "docker build --target production -f deploy/docker/Dockerfile.production -t digitalenglishacademy/app:latest .",
        "docker:up": "cd deploy && docker-compose up -d",
        "docker:down": "cd deploy && docker-compose down",
        "docker:logs": "cd deploy && docker-compose logs -f",
        "deploy:production": "node deploy-production.js",
        "deploy:build": "npm run build && npm run deploy:production",
        "deploy:docker-prod": "docker-compose -f deploy/docker-compose.production.yml up -d --build",
        "deploy:scale-up": "bash deploy/scripts/scale-production.sh up",
        "deploy:scale-down": "bash deploy/scripts/scale-production.sh down",
        "deploy:scale-status": "bash deploy/scripts/scale-production.sh status",
        "deploy:backup": "bash deploy/scripts/backup-production.sh",
        "deploy:monitor": "bash deploy/scripts/scale-production.sh monitor",
        "deploy:status": "bash deploy/scripts/status-check.sh",
        "demo:interactive": "cd demo && python -m http.server 8000",
        "sales:generate": "cd sales-materials && npm run generate",
        "sales:install": "cd sales-materials && npm run install-deps"
    },
    "dependencies": {
        "@auth0/auth0-spa-js": "^2.1.0",
        "@google/generative-ai": "^0.24.1",
        "@playwright/test": "^1.55.0",
        "@stripe/stripe-js": "^2.1.0",
        "aws-sdk": "^2.1692.0",
        "cors": "^2.8.5",
        "dayjs": "^1.11.13",
        "dotenv": "^17.2.2",
        "express": "^4.21.2",
        "express-jwt": "^8.5.1",
        "jwks-rsa": "^3.2.0",
        "pg": "^8.16.3",
        "stripe": "^18.5.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.8.0",
        "@testing-library/react": "^16.3.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "auth0": "^4.29.0",
        "cross-env": "^10.0.0",
        "eslint": "^8.55.0",
        "jsdom": "^23.2.0",
        "prettier": "^3.1.0",
        "supertest": "^7.1.4",
        "terser": "^5.43.1",
        "typescript": "^5.3.0",
        "vite": "^7.1.3",
        "vite-plugin-pwa": "^1.0.3",
        "vitest": "^3.2.4"
    },
    "keywords": [
        "english-learning",
        "education",
        "accessibility",
        "performance",
        "progressive-web-app"
    ],
