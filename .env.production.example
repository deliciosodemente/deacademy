# Production Environment Configuration for Digital English Academy
# Copy to .env.production and update with your actual values

# Domain Configuration
DOMAIN=denglishacademy.com
ENVIRONMENT=production

# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://api.denglishacademy.com

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongodb_password
MONGODB_URL=mongodb://admin:your_secure_mongodb_password@mongodb-primary:27017/digitalenglishacademy?authSource=admin

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:your_secure_redis_password@redis-cluster:6379

# SSL Configuration
ACME_EMAIL=admin@denglishacademy.com

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password

# Backup Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
BACKUP_S3_BUCKET=dea-backups
BACKUP_SCHEDULE=0 2 * * *

# Security Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
SESSION_SECRET=your_session_secret_key_minimum_32_characters

# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@denglishacademy.com
SMTP_PASS=your_email_password

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
HOTJAR_ID=your_hotjar_id

# CDN Configuration
CDN_URL=https://cdn.denglishacademy.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PAYMENTS=true
ENABLE_COMMUNITY=true
ENABLE_ANALYTICS=true

# Performance Configuration
CACHE_TTL=3600
SESSION_TTL=86400