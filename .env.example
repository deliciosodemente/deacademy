# Auth0 Configuration (Requerido para autenticaci√≥n)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_AUDIENCE=https://your-api-audience

# Stripe Configuration (Requerido para pagos)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_PAYMENT_LINK=https://buy.stripe.com/your-payment-link

# PostgreSQL Configuration (Requerido para base de datos)
PG_HOST=your-postgres-host
PG_PORT=5432
PG_USER=your-postgres-user
PG_PASSWORD=your-postgres-password
PG_DATABASE=your-postgres-database

# Gemini API Key (Requerido para funciones de IA)
GEMINI_API_KEY=your-gemini-api-key

# Performance Monitoring (Opcional)
PERFORMANCE_ENDPOINT=https://your-analytics-endpoint.com/api/metrics

# Environment (development, staging, production)
NODE_ENV=development

# Feature Flags (true/false)
FEATURE_AUTH0=true
FEATURE_STRIPE=true
FEATURE_POSTGRESQL=true
FEATURE_MONGODB=false
FEATURE_ANALYTICS=false
