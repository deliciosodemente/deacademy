# Production environment variables for Digital English Academy
# DO NOT commit sensitive values to version control

# Application
NODE_ENV=production
APP_NAME=Digital English Academy
APP_VERSION=1.0.0
PORT=80
HTTPS_PORT=443

# Database
MONGODB_URL=mongodb://admin:${MONGO_ROOT_PASSWORD}@mongodb:27017/digitalenglishacademy?authSource=admin
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Auth0 Configuration
AUTH0_DOMAIN=digitalenglishacademy.auth0.com
AUTH0_CLIENT_ID=${AUTH0_CLIENT_ID}
AUTH0_CLIENT_SECRET=${AUTH0_CLIENT_SECRET}
AUTH0_AUDIENCE=https://api.denglishacademy.com

# Security
SESSION_SECRET=${SESSION_SECRET}
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# External Services
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Email Service
SENDGRID_API_KEY=${SENDGRID_API_KEY}
FROM_EMAIL=noreply@denglishacademy.com

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}

# Performance
CACHE_TTL=3600
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true

# Backup Configuration
BACKUP_S3_BUCKET=dea-production-backups
AWS_REGION=us-east-1

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# CORS
CORS_ORIGIN=https://denglishacademy.com
CORS_CREDENTIALS=true

# Content Security Policy
CSP_REPORT_URI=https://denglishacademy.com/csp-report
