# Staging environment variables for Digital English Academy

# Application
NODE_ENV=staging
APP_NAME=Digital English Academy (Staging)
APP_VERSION=1.0.0-staging
PORT=80
HTTPS_PORT=443

# Database
MONGODB_URL=mongodb://admin:${MONGO_ROOT_PASSWORD}@mongodb:27017/digitalenglishacademy_staging?authSource=admin
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/1

# Auth0 Configuration
AUTH0_DOMAIN=digitalenglishacademy-staging.auth0.com
AUTH0_CLIENT_ID=${AUTH0_STAGING_CLIENT_ID}
AUTH0_CLIENT_SECRET=${AUTH0_STAGING_CLIENT_SECRET}
AUTH0_AUDIENCE=https://staging-api.denglishacademy.com

# Security
SESSION_SECRET=${STAGING_SESSION_SECRET}
JWT_SECRET=${STAGING_JWT_SECRET}
ENCRYPTION_KEY=${STAGING_ENCRYPTION_KEY}

# External Services
STRIPE_PUBLISHABLE_KEY=${STRIPE_TEST_PUBLISHABLE_KEY}
STRIPE_SECRET_KEY=${STRIPE_TEST_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_TEST_WEBHOOK_SECRET}

# Email Service
SENDGRID_API_KEY=${SENDGRID_STAGING_API_KEY}
FROM_EMAIL=staging@denglishacademy.com

# Monitoring
SENTRY_DSN=${SENTRY_STAGING_DSN}
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_STAGING_ID}

# Performance
CACHE_TTL=1800
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=200

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true

# Backup Configuration
BACKUP_S3_BUCKET=dea-staging-backups
AWS_REGION=us-east-1

# CORS
CORS_ORIGIN=https://staging.denglishacademy.com
CORS_CREDENTIALS=true

# Content Security Policy
CSP_REPORT_URI=https://staging.denglishacademy.com/csp-report
